{
    "require": {
        "slim/slim": "^3.8",
        "lcobucci/jwt": "^3.2",
        "illuminate/database": "^6.20",
        "robmorgan/phinx": "^0.11.4",
        "slim/twig-view": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Oportunista\\" : "src/"
